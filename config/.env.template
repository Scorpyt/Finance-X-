# Environment Variables for API Keys
# Copy this file to .env and add your keys

# EIA (US Energy Information Administration) - Oil Data
# Register: https://www.eia.gov/opendata/register.php
EIA_API_KEY=your_eia_key_here

# IEX Cloud - Equity Data (Free tier: 100 req/day)
# Register: https://iexcloud.io/cloud-login#/register
IEX_TOKEN=pk_your_iex_token_here

# MarineTraffic - Tanker Positions (Free tier: 50 req/month)
# Register: https://www.marinetraffic.com/en/ais-api-services
MARINE_API_KEY=your_marine_key_here

# Database Configuration
DATABASE_PATH=data/market_data.db

# Feature Flags
USE_REAL_DATA=false
USE_PERSISTENCE=true
USE_AUDIT=true
