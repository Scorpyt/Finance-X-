# Finance-X Environment Configuration
# Copy this file to .env and fill in your values

# ======================
# DATABASE CONFIGURATION
# ======================

# Neon PostgreSQL Connection String
# Get this from: https://console.neon.tech → Your Project → Connection Details
# Format: postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require
DATABASE_URL=

# Set to 'true' to use local SQLite instead of PostgreSQL (for development)
USE_SQLITE=false

# ======================
# EMAIL CONFIGURATION  
# ======================

# Gmail credentials for sending security codes
# Create an App Password: Google Account → Security → App passwords
EMAIL_USER=
EMAIL_PASS=

# ======================
# AUTH SERVER
# ======================

# Port for the authentication server
AUTH_PORT=3001
